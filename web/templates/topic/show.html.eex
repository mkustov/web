<h1>
  <%= @topic.title %>
</h1>

<%= form_for @comment_changeset, comment_path(@conn, :create, @topic), fn f -> %>
  <div class="form-group">
    <%= text_input f, :content, placeholder: "Comment here", class: "form-control" %>
    <%= error_tag f, :content %>
    <%= submit "Add comment", class: "btn btn-primary" %>
  </div>
<% end %>
